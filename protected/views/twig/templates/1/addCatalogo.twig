{% include 'includesAdmin/header.html' %}
<div id="page-wrapper">
  {% include 'includesAdmin/header2.html' %}
  <div id="page-content-wrapper">
    <div id="page-content">
      <div class="container">
        <div id="page-title">
          <h2>{{ accion }} Registro</h2>
          <p>{{dominio|upper}}</p>
        </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <form
              id="frm1"
              name="frm1"
              action="{{pathCMSSite}}update-catalogo"
              method="post"
              enctype="multipart/form-data"
              class="form-horizontal bordered-row"
            >
              <input
                type="hidden"
                name="Dominio"
                id="txtDominio"
                value="{{dominio}}"
              />
              <input type="hidden" name="idReg" id="idReg" value="{{idReg}}" />
              <input type="hidden" name="Action" id="Action" value="" />
              <input
                type="hidden"
                name="path"
                id="path"
                value="{{pathCMSSite}}"
              />

              <!--<legend>Cat√°logo de {{dominio|upper}}</legend>-->
              {% set continue = false %} {% for key, value in campos %} {% if
              key == "id" or key == "fecha" or key == "user_id" %} {% set
              continue = true %} {% endif %} {% if not continue %}

              <div class="form-group">
                <label class="col-sm-2 control-label"> {{value.nombre}} </label>
                <div class="col-sm-10">
                  {% if value.tipo == "varchar" %} {% if key == "correo" %}
                  <input
                    type="email"
                    class="form-control form-control"
                    maxlength="{{value.size}}"
                    id="txt{{key}}"
                    name="txt{{key}}"
                    value="{{datos.0[key]}}"
                  />
                  {% elseif key == "password" %}
                  <input
                    type="password"
                    class="form-control form-control"
                    maxlength="{{value.size}}"
                    id="txt{{key}}"
                    name="txt{{key}}"
                  />
                  {% else %}
                  <input
                    type="text"
                    class="form-control form-control"
                    maxlength="{{value.size}}"
                    id="txt{{key}}"
                    name="txt{{key}}"
                    value="{{datos.0[key]}}"
                  />
                  {% endif %} {% endif %} {% if value.tipo == "datetime" %}
                  <div id="" class="input-group date datetimepicker1">
                    <input
                      type="text"
                      class="form-control form-control"
                      maxlength=""
                      id="txt{{key}}"
                      name="txt{{key}}"
                      value="{{datos.0[key]}}"
                    />
                    <span class="input-group-addon">
                      <span class="fa fa-calendar"></span>
                    </span>
                  </div>
                  {% endif %} {% if value.tipo == "date" %}
                  <div id="" class="input-group date datetimepicker1">
                    <input
                      type="text"
                      class="form-control form-control"
                      maxlength=""
                      id="txt{key}"
                      name="txt{{key}}"
                      value="{{now_calendar}}"
                    />
                    <span class="input-group-addon">
                      <span class="fa fa-calendar"></span>
                    </span>
                  </div>
                  {% endif %} {% if value.tipo == "int" %} {% if
                  value.relaciones.0 == NULL %}
                  <input
                    type="number"
                    class="form-control form-control"
                    maxlength="{{value.size}}"
                    id="txt{{key}}"
                    name="txt{{key}}"
                    value="{{datos.0[key]}}"
                  />
                  {% else %} {% set campoR = value.relaciones.0.campoReturn.0 %}

                  <select
                    class="form-control form-control"
                    id="txt{{key}}"
                    name="txt{{key}}"
                  >
                    {% for keyR, valueR in value.relaciones.1 %} {% if
                    datos.0[key] == valueR.id %}
                    <option value="{{valueR.id}}" selected>
                      {{valueR[campoR]}}
                    </option>
                    {% else %}
                    <option value="{{valueR.id}}">{{valueR[campoR]}}</option>
                    {% endif %} {% endfor %}
                  </select>
                  {% endif %} {% endif %} {% if value.tipo == "text" or
                  value.tipo == "longtext" %} {% if dominio=="plantilla" %}
                  <textarea
                    class="form-control"
                    id="txt{{key}}"
                    name="txt{{key}}"
                  >
{{datos.0[key]}}</textarea
                  >
                  {% else %}
                  <textarea
                    class="form-control mceEditor"
                    id="txt{{key}}"
                    name="txt{{key}}"
                  >
{{datos.0[key]}}</textarea
                  >
                  {% endif %} {% endif %} 
                  {% if value.tipo == "decimal" %}
                  <input
                    type="text"
                    class="form-control form-control"
                    maxlength="{{value.size}}"
                    id="txt{{key}}"
                    name="txt{{key}}"
                    value="{{datos.0[key]}}"
                  />
                  {% endif %}
                  {% if value.tipo == "tinyint" %}
                    <select
                    id="txt{{key}}"
                    name="txt{{key}}"
                    class="form-control select2-3"
                  >
                  {% set selected1 = "selected" %}
                  {% set selected2 = "" %}
                  {% if datos.0[key] == 1%}
                    {% set selected1 = "" %}
                    {% set selected2 = "selected" %}
                  {%endif%}
                    <option value="1" {{selected1}}>SI</option>
                    <option value="0" {{selected2}}>NO</option>
                  </select>
                  {% endif %}
                </div>
              </div>

              {% endif %} {% if continue %} {% set continue = false %} {% endif
              %} {% endfor %} {% if HasCampos != "" %} {% for key, value in
              HasCampos %}

              <div class="form-group">
                <label class="col-sm-2 control-label">{{value.nombre}}</label>
                <div class="col-sm-10">
                  {% for ke, va in value.registros %} {% set selected = "" %} {%
                  for k2, v2 in value.registrosActuales %} {% if va.id == v2.2
                  %} {% set selected = "selected" %} {% endif %} {% endfor %} {%
                  endfor %}

                  <select
                    id="Xrel{{value.name}}"
                    name="Xrel{{value.name}}[]"
                    multiple=""
                    class="form-control select2-3"
                  >
                    {% for ke, va in value.registros %} {% set selected = "" %}
                    {% for k2, v2 in value.registrosActuales %} {% if va.id ==
                    v2.2 %} {% set selected = "selected" %} {% endif %} {%
                    endfor %}
                    <option value="{{va.id}}" {{selected}}>{{va.1}}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>

              {% endfor %} {% endif %} {% if isImg %}

              <div class="form-group">
                <label class="col-sm-2 control-label">Imagen:</label>
                <div class="col-sm-10">
                  <input
                    type="file"
                    data-classbutton="btn btn-default"
                    data-classinput="form-control inline"
                    class="form-control filestyle"
                    id="txFile"
                    name="txFile"
                  />
                </div>
              </div>

              {% endif %}
              <div class="form-group">
                <br />
                <div class="col-lg-offset-2 col-lg-10">
                  <button
                    type="submit"
                    class="btn btn-sm btn-info"
                    name="cmdRegresar"
                    id="cmdRegresar"
                    data-action="catalogo/{{dominio}}"
                    value="1"
                  >
                    <i class="glyph-icon icon-angle-double-left"></i>
                    Regresar
                  </button>
                  <button
                    type="submit"
                    class="btn btn-sm btn-success"
                    name="cmdGuardar"
                  >
                    <i class="glyph-icon icon-save"></i>
                    Guardar
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% include 'includesAdmin/footerJS.html' %}
